# https://editorconfig.org/

root = true

[*]
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true
end_of_line = lf
charset = utf-8

[*.py]
max_line_length = 100

[Makefile]
indent_style = tab

[*.{json,y{a,}ml,sh}]
indent_size = 2

[Dockerfile*]
indent_size = 2
